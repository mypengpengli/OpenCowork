{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCowork",
  "version": "0.2.2",
  "identifier": "com.opencowork.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:tauri",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenCowork",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "useLocalToolsDir": true,
    "icon": [],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/mypengpengli/OpenCowork/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDExQkI5RkI2OUEwNUE4QkIKUldTN3FBV2F0cCs3RVJsNy9Sb2hDTzhJb3FVSkNXR0tFeDZia3pNNHh6YVhTZDdEa2gxUloxV2oK"
    }
  }
}
